# Force Docker deployment - override any Python detection
services:
  - type: web
    name: oura-rag-app
    env: docker
    plan: starter
    dockerfilePath: ./Dockerfile
    dockerContext: .
    # Explicitly disable Python environment
    pythonVersion: null
    buildCommand: null
    startCommand: null
    envVars:
      - key: SUPABASE_URL
        sync: false
      - key: SUPABASE_ANON_KEY
        sync: false
      - key: SUPABASE_SERVICE_ROLE_KEY
        sync: false
      - key: OPENAI_API_KEY
        sync: false
      - key: OURA_PERSONAL_ACCESS_TOKEN
        sync: false
      - key: STREAMLIT_SERVER_HEADLESS
        value: true
      - key: STREAMLIT_SERVER_ENABLE_CORS
        value: false
      - key: STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION
        value: false
    healthCheckPath: /
    autoDeploy: true
    numInstances: 1
    region: oregon
